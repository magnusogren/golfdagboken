<div class="row">
  <div class="col-md-4">
    <% for(let golfbana of golfbanor) { %>
    <div class="card mb-3">
      <div class="card-header"><%=golfbana.name%></div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a href="<%=golfbana.hemsida_url%>" target="_blank" rel="noopener noreferrer"
            ><%=golfbana.hemsida_url%></a
          >
        </li>
        <li class="list-group-item">
          <a href="<%=golfbana.golfguidenurl%>" target="_blank" rel="noopener noreferrer"
            >Golfguiden</a
          >
        </li>
        <li class="list-group-item">
          <a class="btn btn-outline-primary d-flex" href="/golfbanor/<%=golfbana._id%> "
