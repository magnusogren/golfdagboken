<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/styles/stars.css" />
<link rel="stylesheet" href="/styles/styles.css" />
<h1>Ny golfrunda</h1>
<form class="row g-3 validated-form" method="POST" action="/golfdagbok" novalidate>
  <div class="col-md-4">
    <label for="bana" class="form-label">Golfklubb</label>
    <select
      class="form-select"
      id="bana"
      name="golfrunda[bana]"
      aria-label="Default select example"
    >
      <option selected disabled hidden>Välj golfklubb</option>
      <% for(let golfbana of golfbanor) { %>
      <option value="<%= golfbana.name %>"><%= golfbana.name %></option>
      <% } %>
    </select>
  </div>
  <div class="col-md-2">
    <label class="form-label" for="datum">Datum</label>
    <input class="form-control" type="date" id="datum" name="golfrunda[datum]" required />
  </div>
  <div class="col-md-2">
    <label class="form-label" for="antalHal">Antal spelade hål:</label>
    <input class="form-control" type="text" id="antalHal" name="golfrunda[antalHal]" required />
  </div>
  <div class="col-md-2">
    <label class="form-label" for="banansPar">Banans par:</label>
    <input class="form-control" type="text" id="banansPar" name="golfrunda[banansPar]" />
  </div>
  <div class="col-md-2">
    <label for="tee" class="form-label">Tee</label>
    <select class="form-select" id="tee" name="golfrunda[tee]" aria-label="Default select example">
      <option selected disabled hidden>Välj ett alternativ</option>
      <option value="Röd">Röd</option>
      <option value="Gul">Gul</option>
    </select>
  </div>
  <div class="col-md-2">
    <label class="form-label" for="langd">Banans Längd:</label>
    <input
      class="form-control"
      type="text"
      id="langd"
      name="golfrunda[langd]"
      placeholder="(meter)"
    />
  </div>
  <div class="col-md-1">
    <label class="form-label" for="bruttoScore">Bruttoscore:</label>
    <input class="form-control" type="text" id="bruttoScore" name="golfrunda[bruttoScore]" />
  </div>
  <div class="col-md-1">
    <label class="form-label" for="nettoScore">Nettoscore:</label>
    <input class="form-control" type="text" id="nettoScore" name="golfrunda[nettoScore]" />
  </div>
  <div class="col-md-1">
    <label class="form-label" for="poang">Poäng:</label>
    <input class="form-control" type="text" id="poang" name="golfrunda[poang]" />
  </div>
  <div class="col-md-3">
    <label class="form-label" for="vader">Väder:</label>
    <input class="form-control" type="text" id="vader" name="golfrunda[vader]" />
  </div>
  <div class="col-md-2">
    <label class="form-label" for="temperatur">Temperatur:</label>
    <input
      class="form-control"
      type="text"
      id="temperatur"
      name="golfrunda[temperatur]"
      placeholder="(°C)"
    />
  </div>
  <div class="col-md-2">
    <label class="form-label" for="vindstyrka">Vindstyrka:</label>
    <input
      class="form-control"
      type="text"
      id="vindstyrka"
      name="golfrunda[vindstyrka]"
      placeholder="(m/s)"
    />
  </div>
  <div class="col-md-12">
    <label class="form-label" for="noteringar">Egna noteringar och kommentarer:</label>
    <input class="form-control" type="text" id="noteringar" name="golfrunda[noteringar]" required />
  </div>
  <div class="col-md-2">
    <label for="banansSkick" class="form-label">Banans Skick</label>
    <select
      class="form-select"
      id="banansSkick"
      name="golfrunda[banansSkick]"
      aria-label="Default select example"
    >
      <option selected disabled hidden>Välj ett alternativ</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div class="col-md-2">
    <label for="sammanfattningBetyg" class="form-label">Betyg på rundan</label>
    <select
      class="form-select"
      id="sammanfattningBetyg"
      name="golfrunda[sammanfattningBetyg]"
      aria-label="Default select example"
      required
    >
      <option selected disabled hidden>Välj ett alternativ</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
  <div class="col-md-8">
    <label class="form-label" for="medspelare">Medspelare:</label>
    <input class="form-control" type="text" id="medspelare" name="golfrunda[medspelare]" />
  </div>
  <div class="col-md-8">
    <label class="form-label" for="bilder">Bilder (url):</label>
    <input class="form-control" type="text" id="bilder" name="golfrunda[url]" />
  </div>
  <div class="form-check form-switch mx-5 mt-4 mb-2">
    <label class="form-check-label" for="omdomeSwitch"
      >Vill du lämna ett omdöme på golfbanan?</label
    >
    <input class="form-check-input" type="checkbox" id="omdomeSwitch" />
  </div>
  <div class="row hidden" id="omdomeFonster">
    <div class="col-md-2 mt-5">
      <fieldset class="starability-basic">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="betyg"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="betyg" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="betyg" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="betyg" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="betyg" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="betyg" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <div class="col-md-10 mb-3 mt-0">
      <label class="form-label" for="body">Omdöme</label>
      <textarea class="form-control" name="text" id="body" cols="30" rows="3"></textarea>
      <div class="valid-feedback">Looks good!</div>
    </div>
  </div>

  <button type="submit" class="btn btn-outline-primary mb-3">Spara</button>
</form>

<script src="/js/knapp.js"></script>
